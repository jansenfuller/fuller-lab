apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: cnpg-client-ca-issuer
  namespace: authentik
spec:
  ca:
    secretName: cluster-1-client-ca
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: authentik-db-client-cert
  namespace: authentik
spec:
  secretName: authentik-db-client-tls
  issuerRef:
    name: cnpg-client-ca-issuer
    kind: Issuer
  commonName: authentik
  usages:
    - client auth
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: planka-db-client-cert
  namespace: planka
spec:
  secretName: planka-db-client-tls
  issuerRef:
    name: cnpg-client-ca-issuer
    kind: Issuer
  commonName: planka
  usages:
    - client auth
